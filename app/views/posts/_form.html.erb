  <%= form_with(model: @post, local: true) do |f| %>
    <% if @post.errors.any? %>
      <div id = 'error_explanation'>
        <h2>Este Post no se pudo crear por las siguientes razones</h2>
        <ul>
          <% @post.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, placeholder: 'Mandate un post', class: 'form-control' %>
    </div>
    <div class = 'actions'>
      <%= f.submit %>
    </div>
  <% end %>